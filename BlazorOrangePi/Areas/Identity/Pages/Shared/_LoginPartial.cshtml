@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
        {
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">
            <i class="oi oi-key"></i> @User.Identity.Name
        </a>
    </li>
    <li class="nav-item">
        <a class="btn btn-danger" asp-area="Identity" asp-page="/Account/Logout">
            Çıkış Yap
        </a>
    </li>
        }
        else
        {
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">
            Kayıt Ol
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
            Giriş
        </a>
    </li>
        }
</ul>
